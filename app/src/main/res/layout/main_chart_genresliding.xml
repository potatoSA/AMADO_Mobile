<?xml version="1.0" encoding="utf-8"?><!-- 장르 SlidingView 화면_김선아 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="9dp">

    <androidx.cardview.widget.CardView
        android:layout_width="90dp"
        android:layout_height="145dp"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#333333"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        app:cardMaxElevation="2dp"
        app:cardPreventCornerOverlap="false">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/Main_ivGenre"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:adjustViewBounds="true"
                android:src="@drawable/ic_launcher_background" />

            <TextView
                android:id="@+id/Main_tvGenreInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Main_ivGenre"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="9dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="힙합"
                android:textColor="#ffffff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Main_tvGenreName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Main_tvGenreInfo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="false"
                android:layout_marginTop="5dp"
                android:autoSizeMaxTextSize="15sp"
                android:autoSizeMinTextSize="8sp"
                android:autoSizeTextType="uniform"
                android:fontFamily="sans-serif-light"
                android:gravity="center_horizontal"
                android:includeFontPadding="false"
                android:text="볼빨간 사춘기"
                android:textColor="#b3ffffff"
                android:textSize="12sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
