<?xml version="1.0" encoding="utf-8"?>
<!-- 마이페이지 > 음원관리 메인 레이아웃_김선아_202001 -->

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/AlM_ScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="2000dp">

            <ImageView
                android:id="@+id/AlM_ivCover"
                android:layout_width="202dp"
                android:layout_height="200dp"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="116dp"
                android:contentDescription="TODO"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars[12]" />

            <TextView
                android:id="@+id/AlM_tvAtid"
                android:hint="아티스트 ID"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/AlM_ivCover"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/AlM_tvAbno"
                android:hint="abno"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="61dp"
                android:layout_marginBottom="36dp"
                android:gravity="center"
                app:layout_constraintBottom_toTopOf="@+id/AlM_ivCover"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/atnm_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="149dp"
                android:layout_marginEnd="124dp"
                android:layout_marginRight="124dp"
                android:text="아티스트명"
                app:layout_constraintBottom_toTopOf="@+id/AlM_tvAtnm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/AlM_tvAtnm"
                android:layout_width="189dp"
                android:layout_height="42dp"
                android:gravity="center_vertical"
                android:hint="닉네임"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/atnm_textView" />

            <EditText
                android:id="@+id/AlM_tvMsnm"
                android:layout_width="189dp"
                android:layout_height="42dp"
                android:layout_marginTop="20dp"
                android:autoSizeTextType="uniform"
                android:ems="10"
                android:hint="노래 제목"
                android:inputType="textPersonName"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AlM_tvAtnm" />

            <TextView
                android:id="@+id/msnm_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="128dp"
                android:layout_marginRight="128dp"
                android:text="노래 제목"
                app:layout_constraintBottom_toTopOf="@+id/AlM_tvMsnm"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/msinfo_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:text="곡 정보"
                app:layout_constraintBottom_toTopOf="@+id/AlM_tvMsinfo"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/AlM_tvMsinfo"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="410dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:editable="true"
                android:hint="곡 정보"
                android:maxLines="7"
                android:scrollbars="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mslyric_textView"
                android:text="가사"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintBottom_toTopOf="@+id/AlM_tvMslyric"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/AlM_tvMslyric"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="550dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:background="@null"
                android:editable="true"
                android:hint="가사"
                android:lines="5"
                android:scrollbars="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.002"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/AlM_ivChange"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/change"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/AlM_ivCancel"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cancel"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/AlM_ivUpload"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_marginTop="68dp"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/upload"
                tools:ignore="VectorDrawableCompat" />

            <ImageView
                android:id="@+id/AlM_ivGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/AlM_ivCover"
                app:layout_constraintEnd_toEndOf="@+id/AlM_ivCover"
                app:srcCompat="@android:drawable/ic_menu_gallery" />

            <Spinner
                android:id="@+id/AlM_spGenre1"
                android:layout_width="132dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AlM_tvMsnm" />

            <Spinner
                android:id="@+id/AlM_spGenre2"
                android:layout_width="132dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AlM_spGenre1" />

            <TextView
                android:id="@+id/textViewPost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="187dp"
                android:layout_marginLeft="187dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="166dp"
                android:layout_marginRight="166dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="7dp"
                android:layout_marginRight="7dp"
                android:text="나의 장르"
                app:layout_constraintEnd_toStartOf="@+id/AlM_tvSelegenre"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AlM_ivCover" />

            <TextView
                android:id="@+id/AlM_tvSelegenre"
                android:layout_width="171dp"
                android:layout_height="29dp"
                android:layout_marginStart="72dp"
                android:layout_marginLeft="72dp"
                android:layout_marginTop="22dp"
                android:gravity="center_vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/AlM_ivCover" />

            <TextView
                android:id="@+id/GenreTv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:text="1차 장르"
                app:layout_constraintEnd_toStartOf="@+id/AlM_spGenre1"
                app:layout_constraintTop_toBottomOf="@+id/AlM_tvMsnm" />

            <TextView
                android:id="@+id/GenreTv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="2차 장르"
                app:layout_constraintEnd_toStartOf="@+id/AlM_spGenre1"
                app:layout_constraintTop_toBottomOf="@+id/GenreTv1" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>