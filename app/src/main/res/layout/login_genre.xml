<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".HeadMenu.Hd_Login.Join.Sns.Sns_Genre">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A M A D O "
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textStyle="italic"
                android:textColor="@color/White"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="좋아하는 장르를 선택해주세요"
                android:textColor="@color/White"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/Genre_Cover"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:background="@drawable/selector_checked"
                android:button="@null"
                android:gravity="center"
                android:textColor="#ffffff" />

            <CheckBox
                android:id="@+id/Genre_Ballade"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
            <CheckBox
                android:id="@+id/Genre_Dance"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="커버곡"
                    android:textColor="@color/White"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="발라드"
                    android:textColor="@color/White" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="댄스"
                    android:textColor="@color/White" />
            </LinearLayout>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/Genre_Trot"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
            <CheckBox
                android:id="@+id/Genre_RB"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
            <CheckBox
                android:id="@+id/Genre_Rap"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="트로트"
                    android:textColor="@color/White"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="R&amp;B/Soul"
                    android:textColor="@color/White" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="랩/힙합"
                    android:textColor="@color/White" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/Genre_Rock"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
            <CheckBox
                android:id="@+id/Genre_electronica"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
            <CheckBox
                android:id="@+id/Genre_Indie"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="락"
                    android:textColor="@color/White"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="일렉트로니카"
                    android:textColor="@color/White" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="인디"
                    android:textColor="@color/White" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/Genre_Blues"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
            <CheckBox
                android:id="@+id/Genre_Pop"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
            <CheckBox
                android:id="@+id/Genre_Edm"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="블루스/포크"
                    android:textColor="@color/White"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="POP"
                    android:textColor="@color/White" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="EDM"
                    android:textColor="@color/White" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="105dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">
            <CheckBox
                android:id="@+id/Genre_Jazz"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
            <CheckBox
                android:id="@+id/Genre_Classic"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
            <CheckBox
                android:id="@+id/Genre_Other"
                android:layout_width="0dp"
                android:layout_height="102dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:button="@null"
                android:background="@drawable/selector_checked"
                android:gravity="center"
                android:textColor="#ffffff" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Jazz"
                    android:textColor="@color/White"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Classic"
                    android:textColor="@color/White" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:gravity="center"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:text="Other"
                    android:textColor="@color/White" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/Genre_Next"
                android:layout_margin="30dp"
                android:layout_width="450dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/join_genrebtn"
                android:text="완료"
                android:textSize="30dp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>